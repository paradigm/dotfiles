  <keybind key="S-A-4">
    <action name="SendToDesktop"><desktop>4</desktop><follow>no</follow></action>
  </keybind>
  <keybind key="S-A-5">
    <action name="SendToDesktop"><desktop>5</desktop><follow>no</follow></action>
  </keybind>
  <keybind key="S-A-6">
    <action name="SendToDesktop"><desktop>6</desktop><follow>no</follow></action>
  </keybind>
  <keybind key="S-A-7">
    <action name="SendToDesktop"><desktop>7</desktop><follow>no</follow></action>
  </keybind>
  <keybind key="S-A-8">
    <action name="SendToDesktop"><desktop>8</desktop><follow>no</follow></action>
  </keybind>
  <keybind key="S-A-9">
    <action name="SendToDesktop"><desktop>9</desktop><follow>no</follow></action>
  </keybind>
  <keybind key="A-Tab">
    <action name="DesktopLast"/>
  </keybind>
  <keybind key="W-d">
    <action name="ToggleShowDesktop"/>
  </keybind>

  <!-- Keybindings for windows -->
  <keybind key="C-S-Q">
    <action name="Close"/>
  </keybind>
  <keybind key="A-J">
    <action name="DirectionalFocusSouth"><dialog>no</dialog><bar>yes</bar><raise>yes</raise></action>
  </keybind>
  <keybind key="A-K">
    <action name="DirectionalFocusNorth"><dialog>no</dialog><bar>yes</bar><raise>yes</raise></action>
  </keybind>
  <keybind key="A-H">
    <action name="DirectionalFocusWest"><dialog>no</dialog><bar>yes</bar><raise>yes</raise></action>
  </keybind>
  <keybind key="A-L">
    <action name="DirectionalFocusEast"><dialog>no</dialog><bar>yes</bar><raise>yes</raise></action>
  </keybind>
  <keybind key="C-S-H">
    <action name="UnmaximizeHorz"/>
    <action name="MoveResizeTo"><x>0</x><width>683</width></action>
    <action name="MaximizeVert"/>
  </keybind>
  <keybind key="C-S-J">
    <action name="UnmaximizeVert"/>
    <action name="MoveResizeTo"><y>-0</y><height>384</height></action>
    <action name="MaximizeHorz"/>
  </keybind>
  <keybind key="C-S-K">
    <action name="UnmaximizeVert"/>
    <action name="MoveResizeTo"><y>0</y><height>384</height></action>
    <action name="MaximizeHorz"/>
  </keybind>
  <keybind key="C-S-L">
    <action name="UnmaximizeHorz"/>
    <action name="MoveResizeTo"><x>-0</x><width>683</width></action>
    <action name="MaximizeVert"/>
  </keybind>
  <keybind key="C-S-N">
    <action name="ToggleOmnipresent"/>
  </keybind>
  <keybind key="C-S-F">
    <action name="ToggleFullscreen"/>
  </keybind>
  <keybind key="C-S-M">
    <action name="Iconify"/>
  </keybind>
  <keybind key="A-space">
    <action name="ShowMenu"><menu>client-menu</menu></action>
  </keybind>

  <!-- Keybindings for window switching -->
  <keybind key="A-S-Tab">
    <action name="PreviousWindow"/>
  </keybind>
  <keybind key="C-A-Tab">
    <action name="NextWindow">
      <panels>yes</panels><desktop>yes</desktop>
    </action>
  </keybind>

  <!-- Keybindings for window manager switching -->
  <keybind key="C-S-F10">
    <action name="Execute">
      <startupnotify>
        <enabled>true</enabled>
        <name>switch to compiz</name>
      </startupnotify>
      <command>scompiz</command>
    </action>
  </keybind>
  <keybind key="C-S-F11">
    <action name="Execute">
      <startupnotify>
        <enabled>true</enabled>
        <name>switch to openbox</name>
      </startupnotify>
      <command>sopenbox</command>
    </action>
  </keybind>
  <keybind key="C-S-F12">
    <action name="Execute">
      <startupnotify>
        <enabled>true</enabled>
        <name>switch to dwm</name>
      </startupnotify>
      <command>sdwm</command>
    </action>
  </keybind>
  <!-- Keybindings for running applications -->
  <keybind key="C-S-r">
