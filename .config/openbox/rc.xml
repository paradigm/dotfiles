      <startupnotify>
        <enabled>true</enabled>
        <name>dmenu</name>
      </startupnotify>
      <command>dmenu_run -fn "-*-terminus-medium-r-normal-*-12-*-*-*-*-*-*-*" -nb "#000000" -nf "#ffffff" -sb "#ffffff" -sf "#000000" </command>
    </action>
  </keybind>
  <keybind key="C-S-s">
